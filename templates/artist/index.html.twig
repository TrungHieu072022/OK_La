{% extends 'base2.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <style>
        .head_music{
            padding-top: 60px;
            padding-bottom: 60px;
            padding-left: 30px;

        }
        .sidebar{
            position: fixed;
            position: -webkit-sticky;
        }
        .song_side{
            position: -webkit-sticky;
            position: sticky;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 90px;
            background-color: black;
            color: white;
            text-align: center;
        }
        .total_song{
            font-size: 40px;
            color: snow;
        }
        .song_name1{
            background: -webkit-linear-gradient(#20fff8, #40ff90);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            font-size: 70px;
        }
        .song_name{
            background: -webkit-linear-gradient(#20fff8, #40ff90);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }
        .total_song{
            font-size: 20px;
        }
        .song-table{
            background-color: rgba(0,0,0,0.3);
        }
        tbody, td, tfoot, th, thead, tr {
            border-width: 1px;
            border-style: none;
        }
        .mid-song{
            border-top-style: none;
            color:whitesmoke;
        }
        tr.mid-song:hover{
            color: white;
            background-color: rgba(0,0,0,0.7);
        }
        .head-song{
            border-bottom-style: solid;
            border-bottom-color: #11ffdd;
        }
        .master_play h5{
            align-items: center;
            margin-left: 20px ;
            background: -webkit-linear-gradient(#20fff8, #40ff90);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            font-size: 18px;
        }
        h5 .subtitle{
            color: gray;
            font-size: 18px;
        }
        .playbtn{
            text-align:center;
        }
        .button-content{
            margin-top: 40px;
        }
        .media-body1{
            margin-left: 20px;
            margin-top: 40px;
        }
        .media-body{
            margin-left: 20px;
            font-size: 20px;
        }
        .song-info2{
            margin-top: 40px;
        }
        h5 .artist_name{
            color: #92999f;
        }
        .artist_name{
            color: #92999f;
        }
        .song-info{
            color: #92999f;
            align-items: center;
            font-size: 20px;
        }
        h1{
            color: snow;
            font-size: 100px;
        }
        .resize1 {
            border-radius: 10px;
            width: 120px;
            height: auto;
        }

        .resize1 {
            width: 100px;
            height: auto;
        }

        .resize {
            object-fit: cover;
            width:230px;
            height:230px;
        }
        .content-row{
            display: inline-flex;
            margin-top: 70px;
            align-items: center;
        }
        .table{
            color: white;
        }
        .nav{
            padding-bottom: 568px;
        }
        a{
            text-decoration: none;
        }
        .nav-link{
            color: gray;
        }
        .nav-link:focus, .nav-link:hover {
            color: white;
        }
        body{
            background-image:url({{ asset('images/music.jpg') }}); ;
            background-size: 200% 200%;
            animation: gradient 80s ease infinite;
        }
        .list{
            padding: 0;
            margin: 0;
            padding-left: 280px;
        }
        @keyframes gradient {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }
        .circle{
            font-size: 10px;
        }
        .sidebar{
            background:black;
        }
        .nav-pills .nav-link.active, .nav-pills .show>.nav-link{
            background-color: #33383b;
        }
    </style>
    <body>
    <div class=" d-flex ">
        <div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white " style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <img class="bi pe-none me-2" width="40" height="32" src="{{ asset('images/home.png') }}" >
                <span class="fs-4">H2 music</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column ">
                <li class="nav-item">
                    <a href="{{ path('app_song_index')}}" class="nav-link" aria-current="page">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_genre_index')}}" class="nav-link">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                        <i class="fas fa-magnifying-glass"></i> Search
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_artist_index')}}" class="nav-link active">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                        <i class="fas fa-guitar"></i> Artist
                    </a>
                </li>
                <hr>
                <li>
                    <a href="#" class="nav-link">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                        <i class="fa-solid fa-music"></i> Create Playlist
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    {% if app.user %}
                        <img src="{{ asset(app.user.ImgUrl)}}" alt="" width="32" height="32" class="rounded-circle me-2">
                        <strong>{{ app.user.username }}</strong>
                    {% endif %}

                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="{{ path('app_user') }}">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ app.user ? 'logout' : 'login' }}">{{ app.user ? 'Logout' : 'Login' }}</a></li>
                </ul>
            </div>
        </div>
        <div class="list w-100">
            <div class="head_music d-flex ">
                <div class="iq-realese-song ">
                    <img class="resize" src="{{ asset('images/musiclist.jpg')}}">
                </div>
                <div class="media-body1 text-white ml-3">
                    <p class="song_name1 mb-0 iq-music-title">Artist list</p>
                    <small class="total_song">Total of Artist in the list <i class="circle fas fa-circle "></i> {{ total }} Artist</small>
                </div>
            </div>
            <div class="song-table">
                <form action={{ path('app_artist_index') }} method="get"  >
                    Country:
                    <select name="country">
                        <option value="America" {{ (selectedCat=="America") ? 'selected' }}>America</option>
                        <option value="Unite Kingdom" {{ (selectedCat=="Unite Kingdom") ? 'selected' }}>Unite Kingdom</option>
                    </select>
                    <input type="submit" value="Filter" class="btn btn-primary"> |
                    <a href="{{ path('app_artist_index') }}"
                       class="btn btn-primary">Reset</a>
                </form>
                <table class="table">
                    <thead>
                    <tr class="head-song">
                        <th>Name</th>
                        <th>The year born</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for artist in artists %}
                        <tr class="mid-song">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="iq-realese-song ">
                                        <a href="" tabindex="0"><img src="{{ asset(artist.ImgUrl) }}" class="resize1 " alt=""></a>
                                    </div>
                                    <div class="media-body text-white ml-3">
                                        <a href="{{ path('app_artist_show', {'id': artist.id}) }}"><p class="song_name mb-0 iq-music-title">{{ artist.name }}</p></a>
                                     <small class="artist_name">{{ artist.country }}</small>
                                    </div>
                                </div>
                            </td>
                            <td class="song-info"><p class="song-info2">{{ artist.Born }}</p></td>
                            <td>
                                <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_artist_new') }}">Create new</a>
            </div>
        </div>
    </div>
    </body>
{% endblock %}
